{# Home page #}
{% extends "index.html.twig" %}

{# Pase URL #}
{% block baseurl %}{{ constant('SITE_URL') }}{% endblock %}

{# Gestion SEO #}
{% block title %}Connexion requise{% endblock %}
{% block description %}connexion requise à la page{% endblock %}


{# Ajout des nouveaux styles #}
{% block stylesheets %}

{% endblock %}

{% block header %}


<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li class="active"><a href="{{ constant('SITE_URL_BASE') }}"><i class="icon-fast-backward icon-white"></i> Revenir à {{ constant('SITE_NOM') }}</a></li>

                </ul>
            </div>
        </div>
    </div>
</div>

<noscript>
<style type="text/css">
        #jsactif {
            display:none!important;
        }
</style>
<br/><br/><br/>
<section class="container">

        <div class="hero-unit">
            <p class="alert alert-error">
                Le javascript est inactif sur votre ordinateur.<br/>
                Par conséquent, il vous est impossible d'accéder à l'interface de gestion.
            </p>
        </div>
</section>
</noscript>
{% endblock %}



{# Contenu de la page #}
{% block content %}



    <br/><br/><br/>
    <section class="container" id="jsactif">

        <div class="hero-unit">

            <form class="form-horizontal" id="validation-login" method="POST" action="auth/login">

                <legend>Connexion au gestionnaire de contenu</legend>

                <div class="control-group">
                    <label class="control-label" for="inputEmail">Adresse Email :</label>
                    <div class="controls">
                        <input type="text" id="inputEmail" placeholder="example@test.fr" name="login">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPassword">Mot de passe :</label>
                    <div class="controls">
                        <input type="password" id="inputPassword" placeholder="Mot de passe" name="password">
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <a class="btn btn-primary" id="submit">Se connecter</a>
                        <span class="separator">·</span>
                        <a class="forgot" href="auth/forget-password" title="Mot de passe oublié ?">Mot de passe oublié ?</a>
                    </div>
                </div>

            </form>

        </div>

        <div class="modal hide fade" id="warning" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Erreur !</h3>
            </div>
            <div class="modal-body">
                <div class="alert alert-error" id="texteLogin">
                    <p>Vos identifiants sont incorrects.</p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Ok</button>
            </div>
        </div>
    </section>

{% endblock %}



{# Importation du JS #}
{% block jsinclude %}

{% endblock %}