{# Home page #}
{% extends "index.html.twig" %}

{# Pase URL #}
{% block baseurl %}{{ constant('SITE_URL') }}{% endblock %}

{# Gestion SEO #}
{% block title %}Configuration du site{% endblock %}
{% block description %}{% endblock %}


{# Ajout des nouveaux styles #}
{% block stylesheets %}

{% endblock %}


{% block container %}class="container"{% endblock %}

{# Contenu de la page #}
{% block content %}

  <div class="row">

  <br/><br/><br/>


  <div class="span12">

  <div class="widget-content">

  <h4 class="fwk-title">Configuration du site</h4>
  <hr/>

  <br/>

  <h4>Le site est actuellement en
    : {% if constant('ENV_DEV') and constant('ENV_LOCALHOST') %} DEV {% elseif constant('ENV_DEV') %} PRE-PROD {% else %} PROD {% endif %}</h4>

  <br/>

  <div class="row">

    <div class="span5">

      Le site est en mode intégration seule en Front Office (sans utiliser de PHP) :

    </div>

    <div class="span5">

      <strong>
        {% if constant('CONFIG_DEV_PHP') %}
          Non
        {% else %}
          Oui
        {% endif %}
      </strong>

    </div>

  </div>

  <div class="row">

    <div class="span5">

      Le site utilise le cache de Twig :

    </div>

    <div class="span5">

      <strong>
        {% if constant('TWIG_CACHE_ACTIVE') == false %}
          Non
        {% else %}
          Oui
        {% endif %}
      </strong>

    </div>

  </div>


  <div class="row">

    <div class="span5">

      Les Logs sont activés :

    </div>

    <div class="span5">

      <strong>
        {% if constant('ERROR_LOGS_ENABLED') %}
          Oui
        {% else %}
          Non
        {% endif %}
      </strong>

    </div>

  </div>


  <div class="row">

    <div class="span5">

      Envoi d'email lors d'une erreur en prod/pre-prod :

    </div>

    <div class="span5">

      <strong>
        {% if constant('ERROR_SEND_EMAIL') %}
          Oui
        {% else %}
          Non
        {% endif %}
      </strong>

    </div>

  </div>

  <div class="row">

    <div class="span5">

      Méthode de cryptage des mots de passe :

    </div>

    <div class="span5">

      <strong>
        {{ constant('PASSWORD_METHOD') }}
      </strong>

    </div>

  </div>

  <div class="row">

    <div class="span5">

      Protection contre le BruteForce :

    </div>

    <div class="span5">

      <strong>
        {% if constant('LOGIN_PROTECT') %}
          Oui
        {% else %}
          Non
        {% endif %}
      </strong>

    </div>

  </div>


  <hr/>


  <div class="row">

    <div class="span5">

      Nom, prénom, email de l'Administrateur du site :

    </div>

    <div class="span5">

      <strong>
        {{ constant('ADMIN_NOM') }} {{ constant('ADMIN_PRENOM') }} : <a
            href="mailto:{{ constant('ADMIN_EMAIL') }}">{{ constant('ADMIN_EMAIL') }}</a>
      </strong>

    </div>

  </div>

  <div class="row">

    <div class="span5 ">

      Nom, prénom, email du client :

    </div>

    <div class="span5">

      <strong>
        {{ constant('CLIENT_NOM') }} {{ constant('CLIENT_PRENOM') }} : <a
            href="mailto:{{ constant('CLIENT_EMAIL') }}">{{ constant('CLIENT_EMAIL') }}</a>
      </strong>

    </div>

  </div>

  <hr/>

  <div class="row">

    <div class="span5">

      Préfixe de BDD :

    </div>

    <div class="span5">

      <strong>
        {{ constant('PDO_PREFIX') }}
      </strong>

    </div>

  </div>

  <div class="row">

    <div class="span5">

      Driver utilisé :

    </div>

    <div class="span5">

      <strong>
        {{ constant('PDO_DRIVER') }}
      </strong>

    </div>

  </div>

  <br/>

  <div class="row">

    <div class="span5">

      Hôte de la base de donnée :

    </div>

    <div class="span5">

      <strong>
        {{ constant('PDO_HOST') }}
      </strong>

    </div>

  </div>

  <div class="row">

    <div class="span5">

      Port de la base de donnée :

    </div>

    <div class="span5">

      <strong>
        {{ constant('PDO_PORT') }}
      </strong>

    </div>

  </div>

  <div class="row">

    <div class="span5">

      Nom de la base de donnée :

    </div>

    <div class="span5">

      <strong>
        {{ constant('PDO_DATABASE_NAME') }}
      </strong>

    </div>

  </div>


  <div class="row">

    <div class="span5">

      Mot de passe de la base de donnée :

    </div>

    <div class="span5">

      <strong>
        ******
      </strong>

    </div>

  </div>

  <hr/>

  <br/><br/>

  <i class="icon icon-wrench"></i> - <a href="private/phpinfo" target="_blank" title="Configuration du serveur">Accéder
    à la configuration générale de PHP et du serveur.</a>

  </div>

  </div>

  </div>


{% endblock %}



{# Importation du JS #}
{% block jsinclude %}
  <script>

    $('#modifierAvatar').click(function () {
      $('#modifierAvatarModal').modal({

      });

      $('#inputsVals').html('<input type="file" name="logotoupload" class="ajaxImageUpload" data-max-size="1000000" data-formats="png,jpg,jpeg" data-filename="logotoupload" data-path="avatars" data-perso="{{ objUser.id }}"><input type="hidden" name="logo" /><div class="loadingDiv"></div>');
      $('input[type=checkbox],input[type=radio],input[type=file]').uniform();
    });
  </script>
{% endblock %}