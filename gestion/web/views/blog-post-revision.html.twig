{# Home page #}
{% extends "index.html.twig" %}

{# Pase URL #}
{% block baseurl %}{{ constant('SITE_URL') }}{% endblock %}

{# Gestion SEO #}
{% block title %}Revision d'une page{% endblock %}
{% block description %}{% endblock %}


{# Ajout des nouveaux styles #}
{% block stylesheets %}

{% endblock %}


{% block container %}class="container"{% endblock %}

{# Contenu de la page #}
{% block content %}

  <div class="row">

    <br/><br/><br/>


    <div class="span12">

      <div class="widget-content" id="blog-post-gestion">

        <div class="pull-right">

          <form action="{{ constant('SITE_CURRENT_URI') }}" method="POST">

            <input type="hidden" name="restoreContent" value="1">
            <button type="button" class="btn btn-danger btn-small" id="validForm"><i class="icon-warning-sign"></i> Restaurer cette révision</button>

          </form>

        </div>

        <a class="hand" id="goBack" href="dashbord/blog-post-gestion/{{ objBlogPostRevision.blogPost.id }}"><i class="icon-arrow-left"></i> Page précédente</a>

        <br/><br/>

        <h4 class="fwk-title">Révision de "{{ objBlogPostRevision.blogPost.titre }}"<span style="color: black; font-size: 15px;"></span></h4>

        <strong style="width: 100px; display: inline-block;">Date : </strong>{{ objBlogPostRevision.dateAddLitteral }}<br/>
        <strong style="width: 100px; display: inline-block;">Admin: </strong>{{ objBlogPostRevision.admin.prenom }} {{ objBlogPostRevision.admin.nom }}
        <hr/>

        <h4>Contenu de la révision :</h4>

        <pre>{{ objBlogPostRevision.texte|nl2br }}</pre>

      </div>
    </div>

  </div>

{% endblock %}



{# Importation du JS #}
{% block jsinclude %}
  <script>

    $(function(){

      $('#validForm').click(function(){
        bootbox.confirm("Voulez-vous vraiment restaurer cette révision ?", function(result) {
          if(result)
            $('form').submit();
        });
      })


    })

  </script>
{% endblock %}