<!DOCTYPE html>
<html>

    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <!–[if lt IE 9]>
        <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]–>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

        <base href="{% block baseurl %}{% endblock %}" />
        <title>{% if seoTitle is not null %}{{ seoTitle }}{% else %}{% block title %}En construction ...{% endblock %}{% endif %}</title>
        <meta name="description" content="{% if seoDescription is not null %}{{ seoDescription }}{% else %}{% block description %} Description de le page {% endblock %}{% endif %}" />

        <meta name="keywords" content="" />
        <meta name="author" content="AUTEUR" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="shortcut icon" href="/favicon.ico" />

        <link rel="stylesheet" href="{{ constant('SITE_URL') }}gestion/web/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="{{ constant('SITE_URL') }}gestion/web/lib/bootstrap/css/bootstrap-responsive.css" />
        <link rel="stylesheet" href="{{ constant('SITE_URL') }}gestion/web/lib/fontawesome/css/font-awesome.min.css" type="text/css" />
        <link rel="stylesheet" href="{{ constant('SITE_URL') }}gestion/web/css/style.css" type="text/css" />
        <link rel="stylesheet" href="web/css/style.css" type="text/css" />
        {%block stylesheets %}
        <!-- Ajout des css supplementaires here -->
        {% endblock %}
        
        {% block linkrel %}
        {% endblock %}

    </head>


    <body>


                    {% block header %}
        <header id="header">
                    {% if seoH1 is not null %}
                        <h1 style="text-indent: -40000px;"><a href="{{ siteUri }}" title="{{ seoH1 }}">{{ seoH1 }}</a></h1>
                    {% else %}
                            <h1 style="text-indent: -40000px;">{% block h1 %}{% endblock %}</h1>
                    {% endif %}
                    {% include 'views/layouts/header.html.twig' %}
            </header>
        {% endblock %}

            <section id="main" {% block container %}class="container"{% endblock %}>
                    {% block content %}{% endblock %}

                    {% block footer %}
                    <footer id="footer">
                        {% include 'views/layouts/footer.html.twig' %}
                        </footer>
                    {% endblock %}

                    </section>

                    <div id="confirmBox" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal hide fade">

                        <div class="modal-header" id=confirmHeader>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h3>Confirmation</h3>
                        </div>

                        <div class="modal-body" id="confirmBody">

                            Voulez-vous vraiment effectuer cette action ?

                        </div>

                        <div class="modal-footer" id="confirmFooter">
                            <a href="#" class="btn" id="confirmFalse" data-dismiss="modal" aria-hidden="true">Annuler</a>
                            <a href="#" class="btn btn-danger" id="confirmTrue" data-uri="">Valider</a>
                        </div>

                    </div>

                    <div id="messageBox" class="messageBox">
                        <div class="contentBox">

                        </div>
                    </div>

                    <script type="text/javascript" src="{{ constant('SITE_URL') }}gestion/web/lib/js/jquery.js"></script>
                    <script type="text/javascript" src="{{ constant('SITE_URL') }}gestion/web/lib/bootstrap/js/bootstrap.min.js"></script>
                    <script type="text/javascript" src="{{ constant('SITE_URL') }}gestion/web/lib/js/AjaxLib.js"></script>
                    <script type="text/javascript" src="{{ constant('SITE_URL') }}gestion/web/lib/js/ArgetFwkLib.js"></script>
                    <script type="text/javascript" src="{{ constant('SITE_URL') }}gestion/web/lib/js/ArgetFwkUtilsLib.js"></script>
                    <script type="text/javascript" src="{{ constant('SITE_URL') }}gestion/web/lib/js/jquery.form.js"></script>
                    
            {% block jsinclude %}

            {% endblock %}

                </body>

            </html>