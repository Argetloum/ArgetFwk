### -----------------------------------------------------------------------------------------------------------------------------
### ----- Application des regles de reecriture
### -----------------------------------------------------------------------------------------------------------------------------

RewriteRule ^montre-revolutionnaire/dormir/flux-rss flux.xml [L]
RewriteRule ^montre-revolutionnaire/dormir/blog/([0-9]+)/(.*) index.php?content=blog&themeid=$1&theme=$2 [L]
RewriteRule ^montre-revolutionnaire/dormir/blog/page-([0-9]+) index.php?content=blog&page=$1 [L]
RewriteRule ^montre-revolutionnaire/dormir/glossaire/page-([0-9]+) index.php?content=glossaire&page=$1 [L]
RewriteRule ^montre-revolutionnaire/dormir/([-a-z]+)/([0-9]+)/(.*) index.php?content=$1&id=$2&titre=$3 [L]
RewriteRule ^montre-revolutionnaire/dormir/([-a-z]+) index.php?content=$1 [L]
